{
  "name": "api-testing-playwright",
  "version": "1.0.0",
  "description": "API Testing with Playwright",
  "keywords": [
    "api",
    "testing",
    "playwright"
  ],
  "type": "module",
  "engines": {
    "node": ">= 24"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "eslint --fix '**/*.{js,ts}'",
    "prepare": "husky",
    "test": "playwright test",
    "test:install-deps": "playwright install chromium && playwright install-deps chromium",
    "test:unit": "vitest run"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@playwright/test": "1.57.0",
    "@types/node": "25.2.2",
    "dayjs": "1.11.19",
    "eslint": "10.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-playwright": "2.5.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0",
    "vitest": "4.0.18",
    "zod": "4.3.6"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write .",
      "eslint '**/*.{js,ts}'"
    ]
  }
}
